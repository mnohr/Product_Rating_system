@model List<systemrating.Data.EntityModels.Product>


<div class="row">
    <div class="col-md-12">
        <a asp-action="Create" asp-controller="Product" class="btn btn-success">Create</a>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <table class="table">
            <thead>
                <tr>
                    <td>Id</td>
                    <td>Product Name</td>
                    <td>Description</td>
                    <td>Price</td>
                    <td>Manage</td>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Price</td>
                    <td>
                        <a class="btn btn-primary" asp-action="Edit" asp-controller="Product" asp-route-id="@item.Id">
                            Edit
                        </a>
                        <a class="btn btn-danger" asp-action="Delete" asp-controller="Product" asp-route-id="@item.Id">
                            Delete
                        </a>
                        <a class="btn btn-info" asp-action="ViewDetails" asp-controller="Product" asp-route-id="@item.Id">
                            View Details
                        </a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>